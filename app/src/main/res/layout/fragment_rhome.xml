<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Reporter.Fragments.RHomeFragment"
    android:background="@color/orange_bg_light"
    >


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:background="@color/orange_active"
                android:layout_width="match_parent"
                android:layout_height="95dp">

            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"

                android:id="@+id/cardddddddddddddddd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@drawable/ic_search_black_24dp"
                    android:inputType="text"
                    android:hint="  Search in this Category"
                    android:padding="15dp"
                    android:background="@drawable/edt_bg"
                    android:id="@+id/editsearchID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardddddddddddddddd2"
                app:cardCornerRadius="5dp"
                android:elevation="8dp"
                android:layout_marginTop="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/cardddddddddddddddd1"
                android:layout_width="match_parent"
                android:layout_height="200dp">


                <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ExtraText">


                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">


                        <LinearLayout
                            android:id="@+id/scannerlinID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">


                            <ImageView
                                android:src="@drawable/qrcode"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="Scanner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>



                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linnidverificationId"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/barchart"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="own Reports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/smsalertlinID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/alert"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:text="SMS Alert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/allincidentlinId"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/crashed"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="All Incident"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


                    ////////////////////////////////////////////////////////////
                    <LinearLayout
                        android:weightSum="4"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">


                        <LinearLayout
                            android:id="@+id/repotrterslinID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/policeman"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="Reporters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/adminlistID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">


                            <ImageView
                                android:src="@drawable/unauthorized"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="Danger Drivers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/bestdriverlinID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">


                            <ImageView
                                android:src="@drawable/podium"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="Best Drivers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/alldriverlinID"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/driver40"
                                android:layout_width="50dp"
                                android:layout_height="50dp">

                            </ImageView>

                            <TextView
                                android:textAlignment="center"
                                android:text="All Driers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>


                    ////////////


                    //////////////////////////////////



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/cardddddddddddddddd2"
                android:id="@+id/cardddddddddddddddd3"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:weightSum="4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/traficruleID"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_traffic_black_24dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                        </ImageView>

                        <TextView
                            android:textAlignment="center"
                            android:text="Traffic Rules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profileid"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/proico"
                            android:layout_width="50dp"
                            android:layout_height="50dp">

                        </ImageView>

                        <TextView
                            android:textAlignment="center"
                            android:text="Profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/signoutrepoID"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ic_clear_all_black_24dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp">
                        </ImageView>
                        <TextView
                            android:textAlignment="center"
                            android:text="Sign Out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
